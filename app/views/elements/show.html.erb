      when '1'
        #blah
      when '2'
        #blah
    end
  %>
</p>

<h3>Value:</h3>
<h1>
    <%= output_html %>
</h1>


<%= link_to 'Edit', edit_page_element_path(@element.page_id, @element) %> |
